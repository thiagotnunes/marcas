<p>
  <h1><%%= t('<%= table_name %>.index.title') %></h1>
</p>

<% attributes.each do |attribute| -%>
<p>
  <b><%%= t('helpers.label.<%= singular_table_name %>.<%= attribute.name %>') %></b><br />
  <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
</p>

<% end -%>
<div class="form-actions">
  <%%= link_to t('buttons.back'), <%= table_name %>_path, :class => 'btn'  %>
  <%%= link_to t('buttons.edit'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'btn' %>
  <%%= link_to t('buttons.destroy'), <%= singular_table_name %>_path(@<%= singular_table_name %>), :method => 'delete', :confirm => t('messages.confirmation'), :class => 'btn btn-danger' %>
</div>
