<p>
<h1><%%= t('<%= singular_table_name %>.title.<%= plural_table_name %>') %></h1>
</p>

<%% if @<%= plural_table_name %>.empty? %>
<div class="alert alert-info">
  <%%= t('<%= singular_table_name %>.messages.empty') %>
</div>
<%% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%%= t('helpers.label.<%= "#{singular_table_name}.id" %>') %></th>
      <% attributes.each do |attribute| -%>
        <th><%%= t('helpers.label.<%= "#{singular_table_name}.#{attribute.human_name.downcase}" %>') %></th>
      <% end -%>
      <th><%%= t('actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <td><%%= <%= singular_table_name %>.id %></td>
      <% attributes.each.with_index do |attribute, index| -%>
        <% if index == 0 %>
          <td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
        <% else %>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end %>
      <% end -%>
      <td><%%= link_to t('button.edit'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-mini' %>
      <%%= link_to t('button.destroy'), <%= singular_table_name %>_path(<%= singular_table_name %>), confirm: t('messages.confirmation'), :class => 'btn btn-mini btn-danger', method: :delete %></td>
      <%% end %>
    </tbody>
  </table>
  <%% end %>

  <%%= link_to t('button.new'), new_<%= singular_table_name %>_path, :class => 'btn btn-primary', :id => 'new' %>
