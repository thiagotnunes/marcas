<%= form_for @service, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @service.errors.any? %>
    <div id="error" class="alert alert-error">
      <% for message in @service.errors.full_messages %>
      <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend><%= t('services.form.title') %></legend>
    
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :price, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :order_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :order_type_id, OrderType.all, :id, :name %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit button_label, :class => 'btn btn-primary', :id => 'commit' %>
      <%= link_to t('buttons.cancel'), services_path, :class => 'btn'  %>
    </div>
  </fieldset>
<% end %>
