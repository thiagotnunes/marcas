<%= form_for sessions_path, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= t('sessions.new.title') %></legend>

    <div class="control-group">
      <%= label_tag :username, t('helpers.label.user.username'), :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :username, params[:username], :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag :password, t('helpers.label.user.password'), :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, params[:password], :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <%= check_box_tag :remember_me, 1, params[:remember_me], :class => 'checkbox' %>
          <%= t('helpers.label.user.remember_me') %>
        </label>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= link_to t('password_resets.new.title'), new_password_reset_path, :id => "forgot_password" %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag t('sessions.new.buttons.login'), :id => "commit", :class => 'btn btn-primary' %>
      <%= link_to t('buttons.cancel'), root_path, :id => 'cancel', :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
