<%= form_for @order, :url => update_status_path(@order), :html => { :class => 'form-horizontal' } do |f| %>
  <% if @order.errors.any? %>
    <div id="error" class="alert alert-error">
      <% for message in @order.errors.full_messages %>
      <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend><%= t('orders.form.title') %></legend>
    
    <div class="control-group">
      <%= f.label :order_status, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :order_status_id, OrderStatus.all, :id, :status, :class => 'text_area' %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit t('buttons.update'), :class => 'btn btn-primary', :id => 'commit' %>
      <%= link_to t('buttons.cancel'), trademark_orders_url, :class => 'btn'  %>
    </div>
  </fieldset>
<% end %>
