<p>
  <h1><%= t('users.index.title') %></h1>
</p>
<% if @users.empty? %>
  <div class="alert alert-info">
    <%= t('users.index.empty') %>
  </div>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('helpers.label.user.id') %></th>
        <th><%= t('helpers.label.user.username') %></th>
        <th><%= t('helpers.label.user.email') %></th>
        <th><%= t('helpers.label.user.activation_state') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.username, user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= formatted_activation_status_for(user) %></td>
          <td>
            <%= link_to t('buttons.destroy'), user_path(user), :method => :delete, :confirm => t('messages.confirmation'), :class => 'btn btn-mini btn-danger', :id => "destroy-#{user.username}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
