<%= form_tag password_resets_path, :class => 'form-horizontal', :method => :post do %>
  <fieldset>
    <legend><%= t('password_resets.new.title') %></legend>

    <div class="control-group">
      <%= label_tag :email, nil, :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, params[:email], :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag t('password_resets.new.buttons.forgot_password'), :id => "commit", :class => 'btn btn-primary' %>
      <%= link_to t('buttons.cancel'), root_path, :id => 'cancel', :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
